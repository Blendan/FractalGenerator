<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fractalGenerator.Controller">
<bottom>
   <FlowPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <children>
         <Label text="Repeats:" textFill="WHITE">
            <FlowPane.margin>
               <Insets left="5.0" />
            </FlowPane.margin>
         </Label>
         <TextField fx:id="inputRepeats" prefHeight="25.0" prefWidth="50.0">
            <FlowPane.margin>
               <Insets left="5.0" right="5.0" />
            </FlowPane.margin>
         </TextField>
         <Label text="Height:" textFill="WHITE">
            <FlowPane.margin>
               <Insets left="5.0" />
            </FlowPane.margin>
         </Label>
         <TextField fx:id="inputHeight" prefHeight="25.0" prefWidth="50.0">
            <FlowPane.margin>
               <Insets left="5.0" right="5.0" />
            </FlowPane.margin>
         </TextField>
         <Label text="Angel:" textFill="WHITE">
            <FlowPane.margin>
               <Insets left="5.0" />
            </FlowPane.margin>
         </Label>
         <TextField fx:id="inputDeg" prefHeight="25.0" prefWidth="50.0">
            <FlowPane.margin>
               <Insets left="5.0" right="5.0" />
            </FlowPane.margin>
         </TextField>
         <Label text="Falloff:" textFill="WHITE">
            <FlowPane.margin>
               <Insets left="5.0" />
            </FlowPane.margin>
         </Label>
         <TextField fx:id="inputFalloff" prefHeight="25.0" prefWidth="50.0">
            <FlowPane.margin>
               <Insets left="5.0" right="5.0" />
            </FlowPane.margin>
         </TextField>
         <Button fx:id="btnGenerate" mnemonicParsing="false" text="Generate">
            <FlowPane.margin>
               <Insets left="5.0" />
            </FlowPane.margin>
         </Button>
         <Button fx:id="btnSave" mnemonicParsing="false" text="Save">
            <FlowPane.margin>
               <Insets left="5.0" />
            </FlowPane.margin>
         </Button>
      </children>
         <padding>
            <Insets top="10.0" />
         </padding>
   </FlowPane>
</bottom>
<center>
   <Pane fx:id="drawPane" prefHeight="500.0" BorderPane.alignment="CENTER" />
</center>
</BorderPane>
